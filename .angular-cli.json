{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "project": {
    "name": "angular-full-site"
  },
  "apps": [
    {
      "root": "src",
      "outDir": "dist",
      "assets": [
        "assets",
        "favicon.ico"
      ],
      "index": "index.html",
      "main": "main.ts",
      "polyfills": "polyfills.ts",
      "test": "test.ts",
      "tsconfig": "tsconfig.app.json",
      "testTsconfig": "tsconfig.spec.json",
      "prefix": "afs",
      "styles": [
        "./assets/css/style.css",
        "./assets/css/namari-color.css",
        "./assets/css/animate.css",
        "styles.css",
        "../node_modules/font-awesome/css/font-awesome.css"
      ],
      "scripts": [
        "./assets/js/jquery.1.8.3.min.js",
        "./assets/js/wow.min.js",
        "./assets/js/featherlight.min.js",
        "./assets/js/featherlight.gallery.min.js",
        "./assets/js/jquery.enllax.min.js",
        "./assets/js/jquery.scrollUp.min.js",
        "./assets/js/jquery.easing.min.js",
        "./assets/js/jquery.stickyNavbar.min.js",
        "./assets/js/jquery.waypoints.min.js",
        "./assets/js/images-loaded.min.js",
        "./assets/js/lightbox.min.js",
        "./assets/js/site.js"
      ],
      "environmentSource": "environments/environment.ts",
      "environments": {
        "dev": "environments/environment.ts",
        "prod": "environments/environment.prod.ts"
      }
    }
  ],
  "e2e": {
    "protractor": {
      "config": "./protractor.conf.js"
    }
  },
  "lint": [
    {
      "project": "src/tsconfig.app.json",
      "exclude": "**/node_modules/**"
    },
    {
      "project": "src/tsconfig.spec.json",
      "exclude": "**/node_modules/**"
    },
    {
      "project": "e2e/tsconfig.e2e.json",
      "exclude": "**/node_modules/**"
    }
  ],
  "test": {
    "karma": {
      "config": "./karma.conf.js"
    }
  },
  "defaults": {
    "styleExt": "css",
    "component": {
      "spec": false
    },
    "service": {
      "spec": false
    },
    "directive": {
      "spec": false
    },
    "class": {
      "spec": false
    },
    "module": {
      "spec": false
    },
    "pipe": {
      "spec": false
    }
  }
}
